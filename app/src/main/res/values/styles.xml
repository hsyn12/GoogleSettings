<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="OutPutText" parent="TextAppearance.AppCompat">
        
        <item name="android:fontFamily">@font/z</item>
        <item name="android:textSize">@dimen/output_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/output_text_color</item>
        <item name="android:layout_marginStart">@dimen/output_text_horizantal_margin</item>
        <item name="android:layout_marginEnd">@dimen/output_text_horizantal_margin</item>
        <item name="android:layout_marginTop">@dimen/output_text_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/output_text_vertical_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="SignButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:text">@string/giris_yap</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/output_text_horizantal_margin</item>
        <item name="android:layout_marginEnd">@dimen/output_text_horizantal_margin</item>
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NotificationButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:text">@string/kullanÄ±m_servisi</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">@dimen/output_text_horizantal_margin</item>
        <item name="android:layout_marginEnd">@dimen/output_text_horizantal_margin</item>
        <item name="android:layout_marginTop">@dimen/output_text_vertical_margin</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">72dp</item>
    </style>

</resources>
